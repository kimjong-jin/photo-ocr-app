{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    "types": ["vite/client"],
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },

    "noEmit": true
  }
}
